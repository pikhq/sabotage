[vars]
pkgver=12
no_unlink=1

[build]
dest="$butch_install_dir""$butch_prefix"
for i in "$K"/bin/*; do
	install -Dm 755 "$i" "$dest"/bin/$(basename "$i")
done
cp -rf "$K"/share "$dest"

for i in unlink ; do
$CC $optcflags -Wall -std=gnu99 -o $i "$K"/$i.c -static $optldflags
install -D -m 755 $i "$butch_install_dir""$butch_prefix"/bin/$i
done

